<style type="text/css">
  #{{elementId}} {
    position: relative;
    height: {{height}}{{heightUnit}};
    width: {{width}}{{widthUnit}};
    display: {{display}};
    flex: 1 0 {{width}}{{widthUnit}};

    -o-transform: translateY({{translateY}});
    -o-transform: translate3d(0, {{translateY}}, 0);

    -ms-transform: translateY({{translateY}});
    -ms-transform: translate3d(0, {{translateY}}, 0);

    -moz-transform: translateY({{translateY}});
    -moz-transform: translate3d(0, {{translateY}}, 0);

    -webkit-transform: translateY({{translateY}});
    -webkit-transform: translate3d(0, {{translateY}}, 0);

    transform: translateY({{translateY}});
    transform: translate3d(0, {{translateY}}, 0);
  }
</style>

{{yield
  (hash
    item=item
    index=index
  )
}}
